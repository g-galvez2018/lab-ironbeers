<div class="random-beer-container">
  <div class="row">
    <div class="column">
      <div class="random-image">
        <img src="{{image_url}}" alt="{{name}}">
      </div>
    </div>
    <div class="double-column">
      <div class="row">        
          <p class="random-name">{{name}}</p>
      </div>
      <div class="row">      
        <p class="random-description">{{tagline}}</p>
      </div> 
      <div class="row">        
          <p class="random-description">{{description}}</p>        
      </div>       
       <div class="row">      
        <p class="random-description"><b>Food Pairings:</b></p>
      </div>   
      <div class="row">
        <ul class="random-description">
          {{#each food_pairing}}
              <li>{{this}}</li>
          {{/each}}
        </ul>        
      </div>
      <div class="row">
        <p class="random-description"><b>Brewer Tips: </b>{{brewers_tips}}</p>
      </div> 
    </div>
  </div>
</div>